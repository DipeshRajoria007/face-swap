{
  "manifest_version": 3,
  "name": "FaceSwap",
  "version": "0.1.0",
  "description": "Instantly swap user identities by injecting auth tokens from clipboard.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "FaceSwap",
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "cookies",
    "storage",
    "clipboardRead",
    "offscreen"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "commands": {
    "swap-identity": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Swap identity from clipboard"
    }
  }
}
